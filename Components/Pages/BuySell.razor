@page "/buysell"

<div class="buysell-main">
    <div class="top">
        <p>
            @(Direction == "BUY" ? "Buy XMR" : "Sell XMR")
            <div class="xmr-icon"></div>
            @(Direction == "BUY" ? "with" : "for")
        </p>
        @if (string.IsNullOrEmpty(PreferredCurrency) || string.IsNullOrEmpty(CurrentMarketPrice))
        {
            <p class="price">Loading price...</p>
        }
        else
        {
            <p class="price">XMR/@PreferredCurrency: @CurrentMarketPrice</p>
        }
    </div>
    <div class="account-type">
        <Tabs @bind-SelectedTabIndex="OfferPaymentType" TabNames="@(["Fiat", "Crypto", "Other"])" DisabledTabNames="@(["Other"])"></Tabs>
        <div class="toggle-container">
            <p class=@(Direction == "BUY" ? "buy-txt txt-active" : "buy-txt")>Buy</p>
            <Toggle @bind-IsToggled="IsToggled"/>
            <p class=@(Direction == "SELL" ? "sell-txt txt-active" : "sell-txt")>Sell</p>
        </div>
        <div class="collapse">
            <ion-icon @onclick="() => IsCollapsed = !IsCollapsed" name=@(IsCollapsed ? "chevron-down-outline" : "chevron-up-outline")></ion-icon>
        </div>
    </div>

    @if (IsCreatingOffer)
    {
        <CreateOffer OnCloseCreateOffer="@CloseCreateOffer" Direction="@Direction" />
    }
    else
    {
        // Fix when minimized clears inputs
        <div class="inputs">
            <div hidden="@IsCollapsed" class=@(IsCollapsed ? "dropdown-collapsed" : "")>
                <div class="dropdown">
                    <SearchableDropdown @ref="CurrencySearchableDropdown" InitialValue="@SelectedCurrencyCode" Placeholder="Show all" Items="@VisibleCurrencyCodes" Text="Currency" OnSubmit="@((val) => SelectedCurrencyCode = val)" />
                </div>
                <div class="dropdown">
                    <SearchableDropdown @ref="PaymentMethodSearchableDropdown" InitialValue="@SelectedPaymentMethod" Placeholder="Show all" Items="@VisiblePaymentMethods" Text="Payment method" OnSubmit="@((val) => SelectedPaymentMethod = val)" />
                </div>
                @if (Direction == "BUY")
                {
                    <div class="no-deposit-toggle">
                        <Toggle Disabled="true" @bind-IsToggled="ShowNoDepositOffers" Text="Show no deposit offers" />
                    </div>
                }
            </div>
            <div class="offers-list-text-container">
                <p class="offers-list-text">@(Direction == "BUY" ? "Buy XMR from" : "Sell XMR to")</p>
                <p class="offers-list-text">@FilteredOffers.Count Offers</p>
            </div>
        </div>
        @if (FilteredOffers.Count == 0 && IsFetching)
        {
            <div class="offers-spinner-container">
                <Spinner IsVisible="true"></Spinner>
            </div>
        }
        else
        {
            <ul class="offers">
                @foreach (var offer in FilteredOffers)
                {
                    <li class="offer">
                        <a class="offer-link" href=@($"buysell/offer?OfferId={offer.Id}&title=Offer")>
                            <div class="offer-top">
                                <div class="offer-currency">
                                    @if (offer.UseMarketBasedPrice)
                                    {
                                        <i class="bi bi-graph-up"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-lock-fill"></i>
                                    }
                                    @if (offer.BaseCurrencyCode == "XMR")
                                    {
                                        @(Direction == "SELL" ? offer.BaseCurrencyCode : offer.CounterCurrencyCode)
                                        <img src="icons/arrow-right.svg" />
                                        @(Direction == "SELL" ? offer.CounterCurrencyCode : offer.BaseCurrencyCode)                                        
                                    }
                                    |
                                    @(Math.Round(double.Parse(offer.Price, CultureInfo.InvariantCulture), (offer.PaymentMethodId == "BLOCK_CHAINS" ? 8 : 2)))
                                    @offer.CounterCurrencyCode
                                    (@(Math.Round(offer.UseMarketBasedPrice ? offer.MarketPriceMarginPct : ((float)BalanceSingleton.GetFixedPricePercentage(offer.CounterCurrencyCode, offer.Price, offer.Direction)), 2).ToString("0.00"))%)
                                </div>
                                @if (!offer.IsMyOffer)
                                {
                                    <div class="card">
                                        @if (offer.PaymentMethodId == "BLOCK_CHAINS")
                                        {
                                            <p>@offer.CounterCurrencyCode</p>
                                        }
                                        else
                                        {
                                            <p>@offer.PaymentMethodShortName</p>
                                        }
                                    </div>
                                }
                            </div>
                            <div class="amounts">
                                @{
                                    var minVolume = double.Parse(offer.MinVolume, CultureInfo.InvariantCulture);
                                    var volume = double.Parse(offer.Volume, CultureInfo.InvariantCulture);

                                    @if (offer.BaseCurrencyCode == "XMR")
                                    {
                                        if (minVolume == volume)
                                        {
                                            <p>Min/max: @(Math.Round(volume, (offer.PaymentMethodId == "BLOCK_CHAINS" ? 8 : 2)) + " ") @offer.CounterCurrencyCode / @(offer.Amount == offer.MinAmount ? $"{offer.Amount.ToMonero()} XMR" : $"{offer.MinAmount.ToMonero()} - {offer.Amount.ToMonero()} XMR")</p>
                                        }
                                        else
                                        {
                                            <p>Min/max: @($"{Math.Round(minVolume, (offer.PaymentMethodId == "BLOCK_CHAINS" ? 8 : 2))} - {Math.Round(volume, (offer.PaymentMethodId == "BLOCK_CHAINS" ? 8 : 2))} ") @offer.CounterCurrencyCode / @(offer.Amount == offer.MinAmount ? $"{offer.Amount.ToMonero()} XMR" : $"{offer.MinAmount.ToMonero()} - {offer.Amount.ToMonero()} XMR")</p>
                                        }
                                        }
                                    }
                            </div>
                            <div class="deposit-container">
                                @if (offer.BuyerSecurityDepositPct == 0)
                                {
                                    <img class="no-deposit-img" src="icons/coin-slash.svg" />
                                    <p>No deposit offer</p>
                                }
                                else
                                {
                                    <p>Deposit XMR: @Math.Round(offer.GetTakerDepositAmount().ToMonero(), 6) (@Math.Round(offer.GetTakerDepositPercent() * 100f)%)</p>
                                }
                            </div>
                        </a>
                    </li>
                }
            </ul>
        }
        <div class="buttons">
            <button class="create-offer-button button-green" @onclick="() => IsCreatingOffer = !IsCreatingOffer">@(Direction == "BUY" ? "Create offer to buy XMR" : "Create offer to sell XMR")</button>
            <button @onclick="NavigateToMyOffers">View my offers</button>
        </div>
    }
</div>